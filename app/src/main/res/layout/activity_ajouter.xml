<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="80dp"
    android:paddingTop="80dp"
    android:theme="@style/AppCompatDialogStyle">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:fontFamily="sans-serif-black"
        android:padding="20dp"
        android:text="ajouter un medicament "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000b76"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nomMed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="nom de mÃ©dicaments"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="petit description"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/dateDebut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="la date de debut"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/dateFin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="la date de fin  "
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerInst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heure"
            android:layout_width="189dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/heure2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/ajoutertemps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:paddingBottom="10dp"
        android:text="ajouter l'heure de prise"
        app:backgroundTint="#000b76" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_wave__17_">

        <Button
            android:id="@+id/ajouterAuliste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_border"
            android:text="sauvgarder"
            android:textColor="#000b76"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>